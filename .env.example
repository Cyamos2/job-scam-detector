# Scamicide Environment Configuration
# Copy this file to .env and fill in your values

# ========================
# App Configuration
# ========================

# API URL for the backend server
EXPO_PUBLIC_API_URL=http://localhost:3000

# Sentry DSN for error tracking (get from Sentry.io)
EXPO_PUBLIC_SENTRY_DSN=

# Sentry minimum log level (debug|info|warning|error|fatal)
EXPO_PUBLIC_SENTRY_MIN_LEVEL=warning

# ========================
# Server Configuration
# ========================

# Server port (default: 3000)
PORT=3000

# Node environment
NODE_ENV=development

# Trust proxy (set to "true" if behind a load balancer)
TRUST_PROXY=false

# Sentry DSN for server-side error tracking
SENTRY_DSN=

# ========================
# Database (SQLite by default)
# ========================

# For production, use a proper database URL
# DATABASE_URL=postgresql://user:password@localhost:5432/scamicide

# ========================
# Build Configuration
# ========================

# Expo project ID (get from https://expo.dev)
EXPO_PROJECT_ID=

# Apple API Key for App Store submission (iOS only)
# APPLE_KEY_ID=
# APPLE_ISSUER_ID=
# APPLE_API_KEY_PATH=./apple-api-key.p8

# Google Play service account (Android only)
# GOOGLE_PLAY_SERVICE_ACCOUNT_PATH=./google-play-service-account.json

