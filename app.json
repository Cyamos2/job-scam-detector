{
  "expo": {
    "name": "Job Scam Detector",
    "slug": "job-scam-detector",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/scamicide-logo.png",
    "splash": {
      "image": "assets/scamicide-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.job-scam-detector",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow taking photos to analyze screenshots.",
        "NSPhotoLibraryUsageDescription": "Allow selecting screenshots from your photo library to analyze."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/scamicide-logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "plugins": [
      [
        "sentry-expo",
        {
          "organization": "your-org-slug",
          "project": "your-project-slug",
          "authToken": "your-auth-token"
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://localhost:3000",
      "sentryDsn": ""
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id",
      "enabled": true,
      "checkAutomatically": "ON_LOAD"
    }
  }
}

