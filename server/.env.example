# Scamicide Server Environment Configuration
# Copy this file to .env and fill in your values

# ========================
# Server Configuration
# ========================

# Server port
PORT=3000

# Node environment (development|production)
NODE_ENV=development

# Trust proxy (set to "true" if behind a load balancer)
TRUST_PROXY=false

# ========================
# Database
# ========================

# SQLite (default - for development)
# DATABASE_URL="file:./dev.db"

# PostgreSQL (recommended for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/scamicide"

# ========================
# Sentry Error Tracking
# ========================

# Get your DSN from https://sentry.io
SENTRY_DSN=

# ========================
# API Configuration
# ========================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8081,exp://localhost:8081

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # requests per window

