# Server Environment Variables
# Copy this file to .env and fill in the values

# Node Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"

# CORS Origin (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:8081,http://localhost:19000,http://127.0.0.1:19000

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry Configuration (Optional - for error tracking)
# Get your DSN from: https://sentry.io/settings/<org>/projects/<project>/keys/
SENTRY_DSN=

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# API Keys (Optional - for enhanced verification)
# LinkedIn API (for company verification)
LINKEDIN_API_KEY=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# VirusTotal API (for URL scanning)
VIRUSTOTAL_API_KEY=

# WhoisXML API (for domain age lookup)
WHOISXML_API_KEY=

