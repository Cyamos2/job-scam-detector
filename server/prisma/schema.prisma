datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Risk {
  low    @map("LOW")
  medium @map("MEDIUM")
  high   @map("HIGH")
}

model Job {
  id        String   @id @default(cuid())
  title     String
  company   String
  url       String?
  risk      Risk
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}