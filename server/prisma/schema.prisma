datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id        String   @id @default(cuid())
  title     String
  company   String
  url       String?
  email     String?
  source    String?
  risk      String   @default("LOW")  // "LOW" | "MEDIUM" | "HIGH" (enforced in app code)
  score     Int      @default(0)
  createdAt DateTime @default(now())
  images    Image[]
  notes     String?
}

model Image {
  id    String @id @default(cuid())
  jobId String
  uri   String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
}