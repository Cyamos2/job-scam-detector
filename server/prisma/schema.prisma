datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id         String   @id @default(cuid())
  title      String
  company    String
  risk       String   @default("LOW") // keep string (SQLite friendly)
  score      Int      @default(0)
  source     String?
  url        String?
  email      String?
  notes      String?
  createdAt  DateTime @default(now())
  images     Image[]
}

model Image {
  id     String @id @default(cuid())
  uri    String
  jobId  String
  job    Job    @relation(fields: [jobId], references: [id], onDelete: Cascade) // <= important
}